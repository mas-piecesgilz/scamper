<!-- Box -->
<div class="box">
	<!-- Box Head -->
	<div class="box-head">
		<h2 class="left">Student Intake</h2>
    </div>

    <div class="tlist">
	  	<table width=100% border="0" cellpadding="0" cellspacing="0">
	        <tr>
    <th>Name</th>
    <th>Intake no</th>
    <th>Year</th>
    <th>Active</th>
    <th colspan=3 class="ac">Control</th>
  </tr>

<% @intakes.each do |intake| %>
  <tr>
    <td><%=h intake.name %></td>
    <td><%=h intake.intake_no %></td>
    <td><%=h intake.year.strftime('%Y') %></td>
    <td><%=h intake.active %></td>
    <td width=10px ><%= link_to image_tag("document.png", :border => 0), :action => 'show', :id => intake %></td>
    <td width=10px><%= link_to image_tag("edit.png", :border => 0), :action => 'edit', :id => intake %></td>
    <td><%= link_to 'Destroy', intake, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Intake', new_intake_path %>