<div class="tform">
  <table width=100% >

	<tr>
		<th colspan = 2>Staff Leave Request Details</th>
	</tr>

	<tr>
		<td class="leftcol"><label for="staff_id"><b>Staff Name:</b></label><font color="red"> * </font></td>
		<td><%=h @leaveforstaff.applicant.mykad_with_staff_name %></td>
	</tr>
	
	<tr>
	<td class="leftcol"><label for="leavetype"><b>Leave Type:</b></label></td>
		<td><%= f.select :leavetype, 
		                 Leaveforstaff::STAFFLEAVETYPE,
		                 :prompt => "Select"  %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="leavestartdate"><b>Leave Start Date:</b></label></td>
		<td><%= f.date_select :leavestartdate, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="leavenddate"><b>Leave End Date:</b></label></td>
		<td><%= f.date_select :leavenddate, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year] %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="leavedays"><b>Duration:</b></label></td>
		<td><%=h @leaveforstaff.leave_for %> Days</td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="reason"><b>Reason:</b></label></td>
		<td><%= f.text_field :reason %></td>
	</tr>
	<tr>
	    <td class="leftcol"><label for="notes"><b>Notes:</b></label></td>
		<td><%= f.text_area :notes, :size => "30x5" %></td>
	</tr>

	<tr>
	    <td class="leftcol"><label for="replacement_id"><b>Replacement Staff:</b></label></td>
	    <td><%= f.collection_select :replacement_id, Staff.find(:all, :conditions => ["staffgrade_id = ?", @leaveforstaff.applicant.staffgrade_id]), :id, :name, :include_blank => true %>
		  
		</td>
	</tr>
	
	<tr>
		<th colspan = 2>Approval Staff Leave Request</th>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="approval1"><b>Approval 1:</b></label></td>
		<td><%= f.check_box :approval1 %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="approval1_id"><b>Approver Name:</b></label></td>
	    <td><%= f.collection_select :approval1_id, Staff.find(:all, :conditions => ["id = ?", @leaveforstaff.applicant.position.bosses.staff.id ]), :id, :position_with_name, :include_blank => true %></td>  
	</tr>

	<tr>
	    <td class="leftcol"><label for="approval1date"><b>Approved By Date:</b></label></td>
		<td><%= f.date_select :approval1date, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year], :include_blank => true %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="approver2"><b>Approval 2:</b></label></td>
		<td><%= f.check_box :approver2 %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="approval2_id"><b>Approver Name:</b></label></td>
		<td><%= f.collection_select :approval1_id, Staff.find(:all, :conditions => ["id = ?", @leaveforstaff.applicant.position.bosses.bosses.staff.id ]), :id, :position_with_name, :include_blank => true %></td>
	</tr>
	
	<tr>
	    <td class="leftcol"><label for="approval2date"><b>Approved By Date:</b></label></td>
		<td><%= f.date_select :approval2date, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year], :include_blank => true %></td>
	</tr>

	
  </table>

</div>
