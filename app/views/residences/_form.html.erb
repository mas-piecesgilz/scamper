<div class="tform">
  <table width=100% >

	<tr>
		<th colspan = 2><%= t 'location.location_details' %></th>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="rescode "><%= t 'location.rescode' %></label><font color="red"> * </font></td>
		<td><%= f.text_field :rescode  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="resname "><%= t 'location.resname' %></label><font color="red"> * </font></td>
		<td><%= f.text_field :resname  %></td>
	</tr>
	
	<tr>
		<td class="leftcol"><label for="parent_id"><%= t 'location.parent_id' %></label></td>
		<td><%= f.collection_select :parent_id, Residence.find(:all, :order => :rescode), :id, :parentlocation_with_code_and_name, :include_blank => true,  :value => 'null' %></td>
	</tr>
	<tr>
		<td class="leftcol"><label for="resclass"><%= t 'location.resclass' %></label></td>
			<td><%= f.select ("resclass", Residence::CLASS,
			                 {:include_blank => ""}, {:onchange => "showMenuForAllocatableRooms(this.value)"})  %></td>
	</tr>
	
	
	<tr id="restypes" style="display: none;">
		<td class="leftcol" ><label for="restype"><%= t 'location.restype' %></label></td>
		<td><%= f.select ("restype",  Residence::TYPE ,
		                 {:include_blank => ""}, {:onchange => "showStudentStaffResidences(this.value)"})   %></td>
	</tr>
<!-->	<tr>
		<td class="leftcol"><label for="resname">Location Name:</label></td>
		<td><#%= f.text_field :resname %></td>
	</tr>-->
	
	
	<!--><tr>
		<td class="leftcol"><label for="allocatable">Allocatable:</label></td>
		<td><#%= f.check_box :allocatable %></td>
	</tr>-->
	
  <tr id="restypestaff" style="display: none;">
		<td class="leftcol"><label for="staff_id"><%= t 'location.staff_id' %></label></td>
		<td><%= f.collection_select :staff_id, Staff.find(:all), :id, :name, :include_blank => true %></td>
	</tr>		

      <tr id="restypestudent"  style="display: none;">
				<td class="leftcol"><label for="student_id"><%= t 'location.student_id' %></label></td>
					<td><%= f.collection_select :student_id, Student.find(:all), :id, :name, :include_blank => true %></td>
			</tr>

	
			<tr id="keys1"  style="display: none;">
				<td class="leftcol"><label for="keytxdt"><%= t 'location.keytxdt' %></label></td>
				<td><%= f.date_select :keytxdt, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year], :include_blank => true %></td>
			</tr>

			<tr id="keys2"  style="display: none;">
				<td class="leftcol"><label for="keyreturndt"><%= t 'location.keyreturndt' %></label></td>
				<td><%= f.date_select :keyreturndt, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year], :include_blank => true %></td>
			</tr>


			<tr id="keys3"  style="display: none;">
				<td class="leftcol"><label for="keyexpectdate"><%= t 'location.keyexpectdate' %></label></td>
				<td><%= f.date_select :keyexpectdate, :start_year => 2010, :end_year => 2020, :order => [:day, :month, :year], :include_blank => true %></td>
			</tr>

			<tr id="keys4"  style="display: none;">
				<td class="leftcol"><label for="keyrx"><%= t 'location.keyrx' %></label></td>
				<td><%= f.check_box :keyrx %></td>
			</tr>
  
	
	<tr>
		<td class="leftcol"><label for="staffadmin_id"><%= t 'location.staffadmin_id' %></label></td>
	<td><%= f.collection_select :staffadmin_id, Staff.find(:all), :id, :staff_name_with_position, :include_blank => true %></td>
	</tr>
</table>

<BR>
</div>


	

	
